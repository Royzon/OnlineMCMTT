<?xml version="1.0" encoding="utf-8"?>

<Parameters>
  <!-- parameters for basic operation -->
  <Operation
    input_source="DKU_KOCCA_S1_ROTATE"
    do_realtime_op="0"
    do_recording="0"
    do_detection="0"
    do_evaluation="0"    
    />
  <!-- setting for real-time grabbing -->
  <Setting name="GRABBING">
    <Camera
      camera_ids="1,2"
      frame_rate="30"
      /> 
    <Calibration
      path="data/calibrationInfos/BlueCOUGAR-X"
      />
    <Detection
      type="fullbody"
      image_rescale="0.75"
      threshold="10"
      nsm_overlap_ratio_1="0.4"
      nsm_overlap_ratio_2="0.25"
      />
    <Tracking2D
      visualize="1"
      image_rescale="1.0"
      detection_min_height="0.0"
      detection_max_height="7000.0"
      max_tracklet_length="5"
      min_num_features="4"
      max_num_features="100"
      back_tracking_length="4"
      feature_track_window_size_ratio="1.0"
      max_box_distance="1.0"
      min_box_overlap_ratio="0.3"
      max_box_center_diff_ratio="0.5"
      min_optical_flow_majority_ratio="0.5"
      max_detection_distance="1000"
      max_height_difference="2000"
      />
    <Association3D
      visualize="1"
      K="10"
      num_frames_for_confirmation="3"
      />
    <Result
      path=""
      />
  </Setting>
  <!-- setting for PILSNU dataset -->
  <Setting name="PILSNU">
    <Dataset
      path="dataset/PILSNU"
      start_frame="0"
      end_frame="100"     
      />
      <!--end_frame="239" -->
    <Camera
      camera_ids="1,2"
      frame_rate="30"
      />
    <Calibration
      path="calibrationInfos"
      />
    <Detection      
      type="fullbody"
      path="detectionResult"
      threshold="30"
      nsm_overlap_ratio_1="0.4"
      nsm_overlap_ratio_2="0.25"
      />
    <Tracking2D
      visualize="0"
      image_rescale="1.0"      
      />
    <Association3D
      visualize="1"      
      K_best_size="20"
      max_num_tracks_in_confirmed_tree="20"
      />
    <Result
      path=""
      />
    <Evaluation
      path=""
      crop_xmin="-3500"
      crop_xmax="+3600"
      crop_ymin="-1500"
      crop_ymax="+4100"
      />
  </Setting>
  <!-- setting for PETS 2009 dataset -->
  <Setting name="PETS2009.S2.L1">
    <Dataset
      path="dataset/PETS2009.S2.L1"
      start_frame="0"
      end_frame="399"
      />
    <!--end_frame="239" -->
    <Camera
      camera_ids="1,2"
      frame_rate="30"
      />
    <Calibration
      path="calibrationInfos"
      />
    <Detection
      type="fullbody"
      path="detectionResult"
      image_rescale="0.75"
      threshold="30"
      nsm_overlap_ratio_1="0.4"
      nsm_overlap_ratio_2="0.25"
      />
    <Tracking2D
      visualize="1"
      image_rescale="0.5"
      detection_min_height="1400.0"
      detection_max_height="2300.0"
      max_tracklet_length="5"
      min_num_features="4"
      max_num_features="100"
      back_tracking_length="4"
      feature_track_window_size_ratio="1.0"
      max_box_distance="1.0"
      min_box_overlap_ratio="0.3"
      max_box_center_diff_ratio="0.5"
      min_optical_flow_majority_ratio="0.5"
      max_detection_distance="500"
      max_height_difference="400"
      />
    <Association3D
      visualize="0"
      proc_window_size="10"
      K_best_size="20"
      max_num_tracks_in_optimization="1000"
      max_num_tracks_in_unconfirmed_tree="4"
      max_num_tracks_in_confirmed_tree="20"
      num_frames_for_confirmation="3"
      do_branch_cut="0"
      max_tracklet_distance="1000.0"
      consider_sensitivity="0"
      max_sensitivity_error="20.0"
      min_target_proximity="500.0"
      default_height="1700.0"
      />
    <Result
      path=""
      />
    <Evaluation
      path=""
      />
  </Setting>
</Parameters>